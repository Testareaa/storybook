pipeline{
    environment{
        dockerimagename = "localhost:5000/storybook-showcase"
        dockerImage = ""
    }
    agent any

    stages {
        stage("Checkout SCM"){
            steps{
                git "https://github.com/Testareaa/storybook.git"
            }
        }
        stage("Build Image"){
            steps{
                sh "docker build -t ${dockerimagename}"
            }
        }
    }
}
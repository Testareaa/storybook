pipeline{
    environment{
        dockerimagename = "localhost:5000/storybook-showcase"
        dockerImage = ""
    }
    agent any

    stages {
        stage("Checkout SCM"){
            steps{
                git "https://github.com/Testareaa/storybook.git"
            }
        }
        stage("Build Image"){
            steps{
                script{
                    dockerImage = docker.build dockerimagename                    
                }
            }
        }
        stage("Pushing Image"){
            steps{
                script{
                    docker.withRegistry("http://localhost:5000"){
                        dockerImage.push("latest")
                    }
                }
            }
        }
    }
}